        <item name="bottomSheetStyle">@style/AppModalStyleLight</item>
    </style>

    <style name="AppModalStyleLight" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog_light</item>
    </style>

    <style name="AppBottomSheetDialogDarkTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleDark</item>
    </style>

    <style name="AppModalStyleDark" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog_dark</item>
    </style>

    <style name="SwitchCompat">
        <item name="colorAccent">@color/green</item>
    </style>
</resources>